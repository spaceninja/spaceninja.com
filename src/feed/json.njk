---
# Metadata comes from _data/metadata.js
# Do not convert to WebC â€” it butchers the XML prolog
permalink: /feed/feed.json
eleventyExcludeFromCollections: true,
---
{
	"version": "https://jsonfeed.org/version/1.1",
	"title": "{{ metadata.title }}",
	"language": "{{ metadata.language }}",
	"home_page_url": "{{ metadata.url | addPathPrefixToFullUrl }}",
	"feed_url": "{{ permalink | htmlBaseUrl(metadata.url) }}",
	"description": "{{ metadata.description }}",
  "icon": "{{ metadata.icon | htmlBaseUrl(metadata.url) }}",
	"author": {
		"name": "{{ metadata.author.name }}",
		"url": "{{ metadata.author.url }}"
	},
	"items": [
		{%- for post in collections.blog | reverse | head(15) %}
		{%- set absolutePostUrl = post.url | htmlBaseUrl(metadata.url) %}
		{
			"id": "{{ absolutePostUrl }}",
			"url": "{{ absolutePostUrl }}",
			"title": "{{ post.data.title }}",
      "image": "{{ post.data.feature_image | feedImage }}",
			"content_html": {% if post.templateContent %}{{ post.templateContent | transformWithHtmlBase(absolutePostUrl, post.url) | dump | safe }}{% else %}""{% endif %},
			"date_published": "{{ post.date | dateToRfc3339 }}",
			"date_modified": "{{ post.data.date_updated | default(post.date) | dateToRfc3339 }}",
      "authors": [
        {
          "name": "{{ metadata.author.name }}",
          "url": "{{ metadata.author.url }}"
        }
      ]
		}
		{% if not loop.last %},{% endif %}
		{%- endfor %}
	]
}
