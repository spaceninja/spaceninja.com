<aside class="author">
  <figure class="author__photo">
    <img
      :src="imgPath(metadata.author.photo)"
      alt=""
      class="author__photo-media"
      :sizes="media.author.sizes"
      :eleventy:widths="media.author.widths"
    />
  </figure>
  <div class="author__bio">
    <h2
      @text="`About ${metadata.author.first_name}`"
      class="visually-hidden"
    ></h2>
    <p @text="metadata.author.bio"></p>
  </div>
</aside>
