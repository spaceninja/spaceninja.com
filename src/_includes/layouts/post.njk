---
layout: layouts/base.njk
prism: true
---
<article>

<header>
  <h1>{{ title }}</h1>

  <p>
    Posted on
    <time datetime="{{ page.date | htmlDateString }}">
      {{ page.date | readableDate }}
    </time>
  </p>
  <p>It will take {{ content | timeToRead }} to read this</p>
</header>

{{ content | safe }}

<footer>
  {% if tags | filterTagList | length %}
  <div>
    <h3>Tags</h3>
    <ul class="list--inline">
      {%- for tag in tags | filterTagList | sort -%}
        <li>
        {%- if collections[tag].length > 1 -%}
          <a
            class="tag"
            href="/tags/{{ tag | slugify }}/"
            title="{{ collections[tag].length }} posts with this tag"
          >{{ tag }}</a>
        {%- else -%}
          <span
            class="tag orphan"
            title="Only one post with this tag"
          >{{ tag }}</span>
        {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </div>
  {% endif %}
  {%- if collections.blog %}
  {%- set previousPost = collections.blog | getPreviousCollectionItem %}
  {%- set nextPost = collections.blog | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <ul class="links-nextprev">
    {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
    {%- if nextPost %}<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  </ul>
  {%- endif %}
  {%- endif %}
</footer>

</article>
